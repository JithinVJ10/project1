	<script>
		const setSubtotal=()=>{
			const itemTotal=document.getElementsByClassName('item-total')
			let subtotal=0;
			for (let i = 0; i < itemTotal.length; i++) {

				subtotal+=Number(itemTotal[i].innerHTML)
			}
			document.getElementById('subtotal').innerHTML=subtotal;

		}
		setSubtotal();

		function incrementQuantity(cartId) {
			$.ajax({
				url: "/increase_product",
				method: "POST",
				data: { cartId: cartId },
				success: function (data) {
					if(data.success) {
						$(`#product-total-price-${cartId}`).text(data.total);
						$(`#quantity_${cartId}`).text(data?.quantity);
						setSubtotal();
					} else {
						console.log('error while updating');
					}
				},
				error: function (jqXHR, textStatus, errorThrown) {
					// Handle error response here
					res.send('error')
				}
			})
		}
		function decrementQuantity(cartItemId) {
			var currentQuantity = parseInt($(`#quantity_${cartItemId}`).text());
			if(currentQuantity > 1) {
				$.ajax({
					url: "/decreaseQuantity",
					method: "post",
					data: { cartItemId: cartItemId },
					success: function (data) {
						// Handle success response here
						console.log(data);
						$(`#product-total-price-${cartItemId}`).text(data.total);
						$(`#quantity_${cartItemId}`).text(data?.quantity);
						setSubtotal();
					},
					error: function (jqXHR, textStatus, errorThrown) {
						// Handle error response here
						res.send('error')
					}
				})
			} else {
				$(`#quantity_${cartItemId}`).text(1)
			}
		}

		function deleteItem(removeItem,products,productName){
			
			$.ajax({
				url:`/deleteItem-inCart/${removeItem}`,
				method:"GET",
				success: (data)=>{
					if (data.success) {
						swal("Success", `${productName} Removed successfully`, "success").then(()=>{
							$('#' + products).remove();
							setSubtotal();
						})
					}else{
						swal("Error", `Failed to remove the ${productName}`, "error");
					}
				},
				error: (xhr, status, error)=>{
					swal("Error", `Failed to remove the ${productName}`, "error");
				}
			})
		}
	</script>

