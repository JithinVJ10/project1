<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="assetUser/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="text-decoration-none text-white ms-3" href="/">Home</a>
            
        </nav>
    </header>
      
    <section class="container-fluid">
        <div class="form-box">
            <div class="form-value">
                <form action="/login" method="post">
                    <p id="head">Login</p>
                    <%if(locals.msg){%>
                        <div id="msg">
                          <p style="color: red;"><%= msg %></p>  
                        </div>

                     <%}%>
                    <div class="inputbox">
                        
                        <ion-icon name="person-outline"></ion-icon>
                        <input oninput="capitalizeFirstLetter()" id="name" type="text" name="name" placeholder="Username" required >
                        
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" name="password" placeholder="Password" required>
                    
                    </div>
                    
                    <button type="submit" class="rounded-2">Log in</button>
                    <div class="register">
                        <p>Don't have account? <a href="/signup">Register</a></p>
                    </div>
                    <div class="register">
                        <p>OTP Log in <a href="/otp">Click here</a></p>
                    </div>
                </form>
            </div>

        </div>
    </section>

    
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>

        function capitalizeFirstLetter() {
            var input = document.getElementById("name");
            input.value = input.value.charAt(0).toUpperCase() + input.value.slice(1);
        }

      setTimeout(()=>{
        document.getElementById("msg").style.display ="none"
      },2000)
    </script>
    <script>
        const wrapper = document.getElementById("bubble-wrapper")
        const animateBubble = x =>{
            const bubble = document.createElement("div")

            bubble.className ="bubble"

            bubble.style.left = '$(x)px'

            wrapper.appendChild(bubble)

            setTimeout( () => wrapper.removeChild(bubble),2000)
        }

        window.onmousemove = e => animateBubble(e.clientX)
    </script>
</body>
</html>